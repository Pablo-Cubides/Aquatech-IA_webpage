{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "layer",
          "screen",
          "responsive",
          "variants"
        ]
      }
    ],
    "import-notation": false,
    "property-no-deprecated": false,
    "selector-class-pattern": null
  },
  "ignoreFiles": ["node_modules/**", ".next/**", "dist/**", "build/**"]
}
