{
  "extends": "@ia-next/typescript-config/base.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": [
        "./src/components/*",
        "./src/app/(portals)/ia/(marketing)/herramientas/visor-difusion/src/components/*",
        "./src/app/(portals)/ia/(marketing)/herramientas/filtrado-ia/src/components/*",
        "./src/app/(portals)/ambiental/(marketing)/herramientas/analisis-correlaciones/src/components/*",
        "./src/app/(portals)/ambiental/(marketing)/herramientas/visor-mapas-ambientales/src/components/*",
        "./src/app/(portals)/ambiental/(marketing)/herramientas/normas-ambientales/src/components/*"
      ],
      "@/styles/*": ["./src/styles/*"],
      "@/lib/*": [
        "./src/lib/*",
        "./src/app/(portals)/ia/(marketing)/herramientas/visor-difusion/src/lib/*",
        "./src/app/(portals)/ia/(marketing)/herramientas/filtrado-ia/src/lib/*",
        "./src/app/(portals)/ambiental/(marketing)/herramientas/analisis-correlaciones/src/lib/*",
        "./src/app/(portals)/ambiental/(marketing)/herramientas/visor-mapas-ambientales/src/lib/*",
        "./src/app/(portals)/ambiental/(marketing)/herramientas/normas-ambientales/src/lib/*"
      ],
      "@/lib/types/*": [
        "./src/app/(portals)/ambiental/(marketing)/herramientas/normas-ambientales/src/lib/types/*"
      ],
      "@/types": ["./src/types"],
      "@/types/*": ["./src/types/*"],
      "@/tools/llm/*": [
        "./src/app/(portals)/ia/(marketing)/herramientas/explora-modelo/src/*"
      ]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
